@model IEnumerable<AirbnbWeb.Model.House>

@{
    ViewData["Title"] = "Index";
}

<div class="container-xxl py-5">
    <div class="container-fluid p-0 mb-5"> 
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Our Houses</h6>
            <h1 class="mb-5">Explore Our <span class="text-primary text-uppercase">Houses</span></h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="position-relative">
                            @if (((int)item.HouseType) == 0)
                            {
                                <img class="w-100" style="height:277px;" src="~/img/bungalow.jpg" alt="">
                            }
                            else if (((int)item.HouseType) == 1)
                            {
                                <img class="w-100" style="height:277px;" src="~/img/apartment.jpeg" alt="">
                            }
                            else if (((int)item.HouseType) == 2)
                            {
                                <img class="w-100" style="height:277px;" src="~/img/castle.jpg" alt="">
                            }
                            else if (((int)item.HouseType) == 3)
                            {
                                <img class="w-100" style="height:277px;" src="~/img/house.jpg" alt="">
                            }
                            else if (((int)item.HouseType) == 4)
                            {
                                <img class="w-100" style="height:277px;" src="~/img/hotel.jpg" alt="">
                            }
                            <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">€@Html.DisplayFor(modelItem => item.Price)/Night</small>
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">@Html.DisplayFor(modelItem => item.HouseName)</h5>
                                <div class="ps-2">
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <small class="border-end me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i>@Html.DisplayFor(modelItem => item.BedroomTotal) Bed</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-bath text-primary me-2"></i>@Html.DisplayFor(modelItem => item.BathroomTotal) Bath</small>
                                <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                            </div>
                            <p class="text-body mb-3">@Html.DisplayFor(modelItem => item.HouseDescription)</p>
                            <p class="text-body mb-3">@Html.DisplayFor(modelItem => item.City), @Html.DisplayFor(modelItem => item.Country)</p>
                            <div class="d-flex justify-content-between">
                                <a class="btn btn-sm btn-primary rounded py-2 px-4" asp-action="Details" asp-route-id="@item.Id">View Detail</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
    </div>
</div>

