@model AirbnbWeb.ViewModel.HouseViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-xxl py-5 bg-white p-0">
    <div class="container-fluid mb-5">
        <div class="row g-5">
            <div class="col-lg-8">
                <div class="position-relative mb-5 wow fadeIn" data-wow-delay="0.1s" style=" visibility: visible; animation-delay: 0.1s; animation-name: fadeIn;">
                    <div class="position-relative overflow-hidden" style="width:100%;">
                        <div class="position-relative" style="float:left; width:100%; margin-right:-100%;">
                            @if (((int)Model.House.HouseType) == 0)
                            {
                                <img class="w-100" src="~/img/bungalow.jpg" alt="">
                            }
                            else if (((int)Model.House.HouseType) == 1)
                            {
                                <img class="w-100" src="~/img/apartment.jpeg" alt="">
                            }
                            else if (((int)Model.House.HouseType) == 2)
                            {
                                <img class="w-100" src="~/img/castle.jpg" alt="">
                            }
                            else if (((int)Model.House.HouseType) == 3)
                            {
                                <img class="w-100" src="~/img/house.jpg" alt="">
                            }
                            else if (((int)Model.House.HouseType) == 4)
                            {
                                <img class="w-100" src="~/img/hotel.jpg" alt="">
                            }
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-4">
                    <h1 class="mb-0">@Html.DisplayFor(model => model.House.HouseName)</h1>
                    <div class="ps-3">
                        <small class="fa fa-star text-primary"></small>
                        <small class="fa fa-star text-primary"></small>
                        <small class="fa fa-star text-primary"></small>
                        <small class="fa fa-star text-primary"></small>
                        <small class="fa fa-star text-primary"></small>
                    </div>
                </div>
                <div class="d-flex flex-wrap pb-4 m-n1">
                    <small class="border-end me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i>@Html.DisplayFor(model => model.House.BedroomTotal) Bed</small>
                    <small class="border-end me-3 pe-3"><i class="fa fa-bath text-primary me-2"></i>@Html.DisplayFor(model => model.House.BathroomTotal) Bath</small>
                    <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                </div>
                <p class="mb-5"><strong>Description:</strong> @Html.DisplayFor(model => model.House.HouseDescription)</p>
                <p class="mb-3"><strong>HouseType:</strong> @Html.DisplayFor(model => model.House.HouseType)</p>
                <p class="mb-3"><strong>Max. persons:</strong> @Html.DisplayFor(model => model.House.MaxPerson)</p>
                <p class="mb-3"><strong>Amount of beds:</strong> @Html.DisplayFor(model => model.House.BedTotal)</p>
                <p class="mb-3"><strong>Smoking allowed:</strong> 
                    @if (Model.House.SmokingAllowed == true)
                    {
                        @: Allowed
                    }
                    else if (Model.House.SmokingAllowed == false)
                    {
                        @: Not allowed
                    }
                            </p>
                <p class="mb-3"><strong>Address:</strong> @Html.DisplayFor(model => model.House.Streetname), @Html.DisplayFor(model => model.House.HouseNumber), @Html.DisplayFor(model => model.House.PostalCode), @Html.DisplayFor(model => model.House.City), @Html.DisplayFor(model => model.House.Country)</p>
                <p class="mb-3"><strong>Landlord:</strong> @Html.DisplayFor(model => model.House.Landlord.FirstName) @Html.DisplayFor(model => model.House.Landlord.LastName)</p>
            </div>
            <div class="col-lg-4">
                <div class=" bg-light mb-5 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
                    <div class="border-bottom text-center text-dark p-3 pt-4 mb-3">
                        <span class="align-top fs-4 lh-base">€</span>
                        <span class="align-middle fs-1 lh-sm fw-bold">@Html.DisplayFor(model => model.House.Price)</span>
                        <span class="align-bottom fs-6 lh-lg">/ Night</span>
                    </div>
                    <form asp-controller="Houses" asp-action="Create">
                        <input type="hidden" asp-for="Reservation.HouseId" value="@Model.House.Id"/>
                        <div class="row g-3 p-4 pt-2">
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="text" placeholder="First name" asp-for="Customer.FirstName" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="text" placeholder="Last name" asp-for="Customer.LastName" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="number" min="18" placeholder="Age" asp-for="Customer.Age" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="text" placeholder="Email" asp-for="Customer.Email" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="tel" placeholder="Phone number" asp-for="Customer.Phonenumber" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="text" placeholder="Country" asp-for="Customer.Country" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="text" placeholder="Street name" asp-for="Customer.Streetname" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="text" placeholder="House number" asp-for="Customer.HouseNumber" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="text" placeholder="Postal code" asp-for="Customer.PostalCode" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="text" placeholder="City" asp-for="Customer.City" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="date" placeholder="Check in" asp-for="Reservation.Start_date" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="date" data-target-input="nearest">
                                    <input class="form-control" type="date" placeholder="Check out" asp-for="Reservation.End_date" />
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary py-3 w-100" type="submit">Book Now</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
